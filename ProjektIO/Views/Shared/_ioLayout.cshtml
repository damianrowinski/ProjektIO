@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="pl">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    @Styles.Render("~/Content/css")
    <title>Strona główna - zarządzanie</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="/">
            <img src="http://via.placeholder.com/240x40/7f7f7f/ffffff?text=LOGO GOES HERE" />
        </a>
        @if (Request.IsAuthenticated)
        {
            <div>
                Witaj, @User.Identity.GetUserName() (@User.Identity.GetUserId())!&emsp;
                <a href="@Url.Action("LogOff", "User")" class="btn btn-primary">Wyloguj się</a>
            </div>
        }
        else
        {
            <div class="btn-group" role="group">
                <a href="@Url.Action("Login", "User")" class="btn btn-primary">Zaloguj się</a>
                <a href="@Url.Action("LoginCAS", "User")" class="btn btn-primary">Zaloguj się (via CAS)</a>
                <a href="@Url.Action("Register", "User")" class="btn btn-primary">Zarejestruj się</a>
            </div>
        }
    </nav>

    <div class="container">
        <div class="line-15"></div>

        <div class="row">
            <div class="col col-12 col-sm-2">
                <div class="row" style="margin-top: 20px;">
                    <div class="col col-sd-4 offset-sd-6"><button class="btn btn-primary btn-block">Współpraca</button></div>
                </div>

                <div class="line-10"></div>

                <div class="row" style="margin-top: 20px;">
                    <div class="col col-sd-4 offset-sd-6"><button class="btn btn-primary btn-block">Kategorie kół</button></div>
                </div>

                <div class="line-10"></div>

                <div class="row" style="margin-top: 20px;">
                    <div class="col col-sd-4 offset-sd-6"><button class="btn btn-primary btn-block">Regulamin</button></div>
                </div>

                <div class="line-10"></div>

                <div class="row" style="margin-top: 20px;">
                    <div class="col col-sd-4 offset-sd-6"><button class="btn btn-primary btn-block">Kontakt</button></div>
                </div>

                <div class="line-10"></div>
                <div class="row" style="margin-top: 20px;">
                    <div class="col col-sd-4 offset-sd-6"><button class="btn btn-primary btn-block">Aktualności</button></div>
                </div>

                <div class="line-10"></div>

                <div class="row" style="margin-top: 20px;">
                    <div class="col col-sd-4 offset-sd-6"><button class="btn btn-primary btn-block">O stronie</button></div>
                </div>

                <div class="line-10"></div>

                <div class="row" style="margin-top: 20px;">
                    <div class="col col-sd-4 offset-sd-6"><button class="btn btn-primary btn-block">Aplikacja</button></div>
                </div>

            </div>

            <div class="col col-12 col-sm-10 text-justify">
                @RenderBody()
            </div>
        </div>

    </div>

    @Scripts.Render("~/Content/js")
</body>
</html>
