@model IEnumerable<string>
@{ ViewBag.Title = "Error";}

<div class="alert alert-danger">
    @switch (Model.Count())
    {
        case 0:
            @: Coś poszło nie tak. Prosimy spróbować ponownie.
            break;
        case 1:
            @Model.First();
            break;
        default:
            @: Wykryto następujące błędy:
            <ul>
                @foreach (string error in Model)
                {
                    <li>@error</li>
                }
            </ul>
            break;
    }
</div>
@Html.ActionLink("OK", "Index", null, new { @class = "btn btn-default" })

