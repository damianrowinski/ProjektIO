@using ProjektIO.Models
@model ViewModels
@{
    ViewBag.Title = "ShowStatute";
}

<div class="header">
    <div class="row align-items-center">
        <div class="col col-12 col-sm-9">
            <h1 class="text-center">@Model.Members.Group.Nazwa</h1>
        </div>
        <img src="~/Content/Images/kolo.png" class="img-thumbnail rounded header-logo m-auto" style="position: relative; left: -25px; bottom: -10px;">
    </div>
    <div style="padding: 10px;"></div>
    <div class="content">
        @RenderPage("~/Views/Group/GroupNav.cshtml")
    </div>
</div>
<h1 style="padding-top: 1%; padding-bottom: 1%;">Nasz regulamin</h1>
<blockquote class="blockquote">
    <p class="mb-0">
        @Model.Members.Group.Regulamin
    </p>
</blockquote>
<a class="btn btn-warning" href="@Url.Action("EditStatute", "Leader", new { id = Model.Members.Group.Id })">Edytuj</></a>