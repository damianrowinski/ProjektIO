@using ProjektIO.Models
@model GroupsViewModel
@{
    ViewBag.Title = "GroupList";
}

<h1>Lista kół z kategorii {nazwaKategorii}</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nazwa koła</th>
            <th scope="col">Przewodniczący koła</th>
            <th scope="col">Link</th>
        </tr>
    </thead>
    <tbody>
        @foreach (KoloNaukowe group in Model.Groups)
        {
            <tr>
                <th scope="row">@group.Id</th>
                <td>@group.Nazwa</td>
                <td>Adam Kowalski</td>
                <td><a href="@Url.Action("ShowGroup", "Group", new { id = group.Id })">KLIK</a></td>
            </tr>
        }
    </tbody>
</table>
<nav>
    <ul class="pagination">
        @if (Model.CurrentPage != 1)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Categories", "Group", new { id = Model.Category, page = Model.CurrentPage - 1 }))">Poprzednia</a>
            </li>
        }

        @for (int i = 1; i <= Model.Pages; i++)
        {
            if (i >= Model.CurrentPage - 3 && i < Model.CurrentPage + 3)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Categories", "Group", new { id = Model.Category, page = i })">@i</a>
                </li>
            }
        }

        @if (Model.CurrentPage != Model.Pages)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Action("Categories", "Group", new { id = Model.Category, page = Model.CurrentPage + 1 })">Następna</a>
            </li>
        }
    </ul>
</nav>
