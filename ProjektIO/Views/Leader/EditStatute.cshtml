@model ProjektIO.Models.ViewModels
@{ ViewBag.Title = "Edit"; }

@Html.ValidationSummary(false)
<h2>Edytuj regulamin</h2>
<div class="form-group">
    <p class="form-control-static">@Model.Group.Id</p>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Group.Id)
    <div class="form-group">
        <label>Regulamin</label>
        @Html.TextBoxFor(x => x.Group.Regulamin, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
