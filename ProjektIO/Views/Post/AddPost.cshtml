@model ProjektIO.Models.PostViewModel
@{ ViewBag.Title = "Dodaj"; }

@Html.ValidationSummary(false)
<h2>Edit User</h2>
<div class="form-group">
    <label>NowyPost</label>
    <p class="form-control-static">@Model.Member.Id</p>
</div>
@using (Html.BeginForm())
{
    <!--hidden for jest bardzo ważne, bez tego wszystko sie sypie-->
    @Html.HiddenFor(model => model.Member.Id)
    @Html.HiddenFor(model => model.Member.IdKola)
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(model => model.PostContent, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}
