@model ProjektIO.Models.AddCommentViewModels
@{ ViewBag.Title = "Dodaj"; }

@Html.ValidationSummary(false)
<h2>Edit User</h2>
<div class="form-group">
    <label>NowyPost</label>
    <p class="form-control-static">@(User as ProjektIO.Auth.Principal).GetUserData().Imie</p>
</div>
@using (Html.BeginForm())
{
    <!--hidden for jest bardzo ważne, bez tego wszystko sie sypie-->
    @Html.HiddenFor(model => model.PostId)
    @Html.HiddenFor(model => model.Comment.IdPostu)
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(model => model.CommentContent, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
}

